generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

enum Role {
    ADMIN
    MANAGER
    SUPPORT
}

model User {
    id        String     @id @default(uuid())
    firstname String
    lastname  String
    email     String     @unique
    active    Boolean    @default(true)
    username  String     @unique
    password  String
    role      Role       @default(SUPPORT)
    tasks     Tasks[]
    centroid  Boolean    @default(false)
    createdAt DateTime   @default(now())
    updatedAt DateTime   @updatedAt
    Features  Features[]
    Guides    Guides[]
}

model Session {
    id        String   @id @default(cuid())
    sid       String   @unique
    data      Json
    expiresAt DateTime
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

enum Status {
    TODO
    IN_PROGRESS
    COMPLETED
    CS_TICKET
    IT_TICKET
}

enum Priority {
    LOW
    MEDIUM
    HIGH
}

model Tasks {
    id          String   @id @default(uuid())
    title       String
    description String
    status      Status   @default(TODO)
    priority    Priority @default(LOW)
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
    userId      String
    user        User     @relation(fields: [userId], references: [id])
}

model Features {
    id          String   @id @default(uuid())
    title       String
    description String
    releaseDate DateTime
    released    Boolean
    published   Boolean
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
    userId      String
    user        User     @relation(fields: [userId], references: [id])

    @@index([userId])
}

model Guides {
    id          String   @id @default(uuid())
    title       String
    description String
    published   Boolean
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
    userId      String
    user        User     @relation(fields: [userId], references: [id])
}
