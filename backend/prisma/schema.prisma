generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(uuid())
  firstname String
  lastname  String
  email     String     @unique
  active    Boolean    @default(true)
  username  String     @unique
  password  String
  role      Role       @default(SUPPORT)
  centroid  Boolean    @default(false)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  Features  Features[]
  Guides    Guides[]
  tasks     Tasks[]
  clients   Clients[]
}

model Session {
  id        String   @id @default(cuid())
  sid       String   @unique
  data      Json
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Tasks {
  id          String   @id @default(uuid())
  title       String
  description String
  status      Status   @default(TODO)
  priority    Priority @default(LOW)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      String
  clientId    String?
  user        User     @relation(fields: [userId], references: [id])
  client      Clients? @relation(fields: [clientId], references: [id])
}

model Features {
  id          String   @id @default(uuid())
  title       String
  description String
  releaseDate DateTime
  released    Boolean
  published   Boolean
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      String
  user        User     @relation(fields: [userId], references: [id])

  @@index([userId])
}

model Guides {
  id          String   @id @default(uuid())
  title       String
  description String
  published   Boolean
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      String
  user        User     @relation(fields: [userId], references: [id])
}

model Clients {
  id        String       @id @default(uuid())
  name      String
  status    ClientStatus @default(ACTIVE)
  platform  Platforms[]
  server    Servers[]
  tasks     Tasks[]
  userId    String?
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  user      User?        @relation(fields: [userId], references: [id])
}

enum Role {
  ADMIN
  MANAGER
  SUPPORT
}

enum Status {
  TODO
  IN_PROGRESS
  COMPLETED
  CS_TICKET
  IT_TICKET
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}

enum ClientStatus {
  ONBOARDING
  ACTIVE
  SUSPENDED
  INACTIVE
}

enum Platforms {
  MT4
  MT5
  MT4SA
  MT5SA
  MTT
  cTrader
  ARK
}

enum Servers {
  live1
  live2
  live5
  live7
}
